{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Beluga",
	"patterns": [
		{
			"include": "#comment"
		}
	],
	"repository": {
		"comment": {
			"patterns": [
				{
					"name": "comment.block.bel",
					"begin": "%{",
					"end": "}%"
				},
				{
					"name": "comment.line.bel",
					"match": "(%).*$"
				}
			]
		}
	},
	"scopeName": "source.bel"
}